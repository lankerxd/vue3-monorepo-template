{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:vue/vue3-recommended", "standard-with-typescript"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["vue"],
  "rules": {
    "vue/max-attributes-per-line": [
      "error",
      {
        // 单行最多只能有3个属性
        "singleline": {
          "max": 3
        },
        // 多行的情况下每行只能有1个属性
        "multiline": {
          "max": 1
        }
      }
    ]
  }
}
